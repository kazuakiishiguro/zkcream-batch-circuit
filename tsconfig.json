{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "outDir": "./build",
    "lib": ["es2015"]
  },
  "exclude": [
    "node_modules/**"
  ],
  "include": [
    "./ts"
  ]
}
